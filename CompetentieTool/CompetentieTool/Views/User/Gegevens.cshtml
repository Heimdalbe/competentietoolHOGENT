@model CompetentieTool.Models.ViewModels.ProfielViewModel;
@{
    ViewData["Title"] = ViewData["Naam"];

}

<div class="container centcontent">
    


    <form method="post">
        <div class="container accordion" id="accordionExample">
            <div asp-validation-summary="All"></div>
            <div class="card">
                <div class="card-header" style="cursor: pointer;" id="headingOne" data-toggle="collapse" data-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                    <h2 class="mb-0">
                        Algemene Gegevens
                    </h2>
                </div>
                <div id="collapseOne" class="collapse show" aria-labelledby="headingOne" data-parent="#accordionExample">
                    <div class="card-body">
                        <div class="row">
                            <div class="form-group col-6">
                                <label asp-for="Voornaam"></label>
                                <input asp-for="Voornaam" class="form-control" />
                                <span asp-validation-for="Voornaam" class="text-danger"></span>
                            </div>
                            <div class="form-group col-6">
                                <label asp-for="Achternaam"></label>
                                <input asp-for="Achternaam" class="form-control" />
                                <span asp-validation-for="Achternaam" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="form-group col-3">
                                <label asp-for="GeboorteDatum"></label>
                                <input asp-for="GeboorteDatum" class="form-control" readonly />
                                <span asp-validation-for="GeboorteDatum" class="text-danger"></span>
                            </div>
                            <div class="form-group col-4">
                                <label asp-for="Geslacht"></label>
                                <select asp-for="Geslacht" class="form-control">
                                    <option value="man">Man</option>
                                    <option value="vrouw">Vrouw</option>
                                    <option value="anders">Anders</option>
                                </select>
                                <span asp-validation-for="Geslacht" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="form-group col-6">
                                <label asp-for="Nationaliteit"></label>
                                <input asp-for="Nationaliteit" class="form-control" />
                                <span asp-validation-for="Nationaliteit" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card">
                <div class="card-header" style="cursor: pointer;" id="headingTwo" data-toggle="collapse" data-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
                    <h2 class="mb-0">
                        Adres
                    </h2>
                </div>
                <div id="collapseTwo" class="collapse" aria-labelledby="headingTwo" data-parent="#accordionExample">
                    <div class="card-body">
                        <div class="row">
                            <div class="form-group col-5">
                                <label asp-for="Straat"></label>
                                <input asp-for="Straat" class="form-control" />
                                <span asp-validation-for="Straat" class="text-danger"></span>
                            </div>
                            <div class="form-group col-2">
                                <label asp-for="Huisnummer"></label>
                                <input asp-for="Huisnummer" class="form-control" />
                                <span asp-validation-for="Huisnummer" class="text-danger"></span>
                            </div>
                            <div class="form-group col-2">
                                <label asp-for="Postcode"></label>
                                <input asp-for="Postcode" class="form-control" />
                                <span asp-validation-for="Postcode" class="text-danger"></span>
                            </div>
                            <div class="form-group col-3">
                                <label asp-for="Gemeente"></label>
                                <input asp-for="Gemeente" class="form-control" />
                                <span asp-validation-for="Gemeente" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card">
                <div class="card-header" style="cursor: pointer;" id="headingThree" data-toggle="collapse" data-target="#collapseThree" aria-expanded="false" aria-controls="collapseThree">
                    <h2 class="mb-0">
                        Contact informatie
                    </h2>
                </div>
                <div id="collapseThree" class="collapse" aria-labelledby="headingThree" data-parent="#accordionExample">
                    <div class="card-body">
                        <div class="row">
                            <div class="form-group col-6">
                                <label asp-for="Gsm"></label>
                                <input asp-for="Gsm" class="form-control" />
                                <span asp-validation-for="Gsm" class="text-danger"></span>
                            </div>
                            <div class="form-group col-6">
                                <label asp-for="Emailadres"></label>
                                <input asp-for="Emailadres" class="form-control" />
                                <span asp-validation-for="Emailadres" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>

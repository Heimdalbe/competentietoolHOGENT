@page
@model RegisterModel
@{
    ViewData["Title"] = "Nieuwe gebruiker | Bedrijf";
}

<h2>@ViewData["Title"]</h2>

<div class="row">
    <div class="col-sm-10">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>

            <h3 class="col-sm-12">Aanspreking</h3>
            <div class="form-group col-sm-12">
                <div class="col-sm-6">
                    @Html.Label("Input.Voornaam", "Voornaam")
                    @Html.TextBoxFor(model => model.Input.Voornaam, new { placeholder = "Bruce", @class = "form-control" })
                </div>
                <div class="col-sm-6">
                    @Html.Label("Input.Achternaam", "Achternaam")
                    @Html.TextBoxFor(model => model.Input.Achternaam, new { placeholder = "Banner", @class = "form-control" })
                </div>
            </div>
            <h3 class="col-sm-12">Persoonlijke gegevens</h3>
            <div class="form-group col-sm-12">
                <div class="col-sm-6">
                    <div>

                        @Html.Label("Input.Geboortedatum", "Geboortedatum")
                    </div>
                    @Html.EditorFor(model => model.Input.Geboortedatum, new { @type = "date", @class = "form-control" })
                </div>
                <div class="col-sm-6">
                    @Html.Label("Input.Nationaliteit", "Nationaliteit")
                    @Html.TextBoxFor(model => model.Input.Nationaliteit, new { placeholder = "Belg", @class = "form-control" })
                </div>
            </div>
            <div class="form-group col-sm-12">
                <div class="col-sm-8">
                    @Html.LabelFor(model => model.Input.Geslacht, new { @class = "control-label" })
                    <div>
                        Man:
                        @Html.RadioButtonFor(model => model.Input.Geslacht, "M")
                        Vrouw:
                        @Html.RadioButtonFor(model => model.Input.Geslacht, "V", htmlAttributes: new { @class = "" })
                        Andere:
                        @Html.RadioButtonFor(model => model.Input.Geslacht, "X", htmlAttributes: new { @class = "" })
                    </div>

                </div>
            </div>  
            <h3 class="col-sm-12">Bedrijfsgegevens</h3>
            <div class="form-group col-sm-12">
                <h4 class="col-sm-12">Algemene Gegevens</h4>
                <div class="form-group col-sm-12">
                    <div class="col-sm-6">
                        @Html.Label("Input.Bedrijfsnaam", "Bedrijfsnaam")
                        @Html.TextBoxFor(model => model.Input.Voornaam, new { placeholder = "HOGENT", @class = "form-control" })
                    </div>
                    <div class="col-sm-6">
                        @Html.Label("Input.Btwnummer", "BTW/Bedrijfsnummer")
                        @Html.TextBoxFor(model => model.Input.Btwnummer, new { placeholder = "0123456789", @class = "form-control" })
                    </div>
                </div>
                <h4 class="col-sm-12">Adres</h4>
                <div class="form-group col-sm-12">
                    <div class="col-sm-8">
                        @Html.Label("Input.Straat", "Straat")
                        @Html.TextBoxFor(model => model.Input.Straat, new { placeholder = "Beekstraat", @class = "form-control" })
                    </div>
                    <div class="col-sm-4">
                        @Html.Label("Input.Huisnummer", "Huisnummer")
                        @Html.TextBoxFor(model => model.Input.Huisnummer, new { placeholder = "15", @class = "form-control" })
                    </div>
                </div>
                <div class="form-group col-sm-12">
                    <div class="col-sm-8">
                        @Html.Label("Input.Gemeente", "Gemeente")
                        @Html.TextBoxFor(model => model.Input.Gemeente, new { placeholder = "Gent", @class = "form-control" })
                    </div>
                    <div class="col-sm-4">
                        @Html.Label("Input.Postcode", "Postcode")
                        @Html.TextBoxFor(model => model.Input.Postcode, new { placeholder = "9000", @class = "form-control" })
                    </div>
                </div>
                <h4 class="col-sm-12">Contact informatie</h4>
                <div class="form-group col-sm-12">
                    <div class="col-sm-6">
                        @Html.Label("Input.Email", "Email")
                        @Html.TextBoxFor(model => model.Input.Email, new { placeholder = "voorbeeld@mail.be", @class = "form-control" })
                    </div>
                    <div class="col-sm-6">
                        @Html.Label("Input.GsmNummer", "Gsm")
                        @Html.TextBoxFor(model => model.Input.GsmNummer, new { placeholder = "0123456789", @class = "form-control" })
                    </div>
                </div>
            </div>
            

            <h3 class="col-sm-12">Beveiliging</h3>
            <div class="form-group col-sm-12">
                <div class="col-sm-6">
                    @Html.Label("Input.Password", "Wachtwoord")
                    @Html.PasswordFor(model => model.Input.Password)
                </div>
                <div class="col-sm-6">
                    @Html.Label("Input.ConfirmPassword", "Wachtwoord bevestigen")
                    @Html.PasswordFor(model => model.Input.ConfirmPassword)
                </div>
            </div>
            <button type="submit" class="btn btn-default">Registreer</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

@page
@model RegisterModel
@{
    ViewData["Title"] = "Nieuwe gebruiker";
}

<h2>@ViewData["Title"]</h2>

<div class="row">
    <div class="col-md-6">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <h3 class="col-md-12">Acounttype</h3>
            <div class="form-check form-check-inline col-md-6">
                <input class="form-check-input" type="radio" name="Type" id="Type" value="sollicitant">
                <label class="form-check-label" for="inlineRadio1">Sollicitant</label>
            </div>
            <div class="form-check form-check-inline col-md-6">
                <input class="form-check-input" type="radio" name="Type" id="Type" value="werkgever">
                <label class="form-check-label" for="inlineRadio2">Werkgever</label>
            </div>
            <h3 class="col-md-12">Aanspreking</h3>
            <div class="form-group col-md-12">
                <label asp-for="Input.Username"></label>
                <input asp-for="Input.Username" class="form-control" />
                <span asp-validation-for="Input.Username" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="Input.Voornaam"></label>
                <input asp-for="Input.Voornaam" class="form-control" />
                <span asp-validation-for="Input.Voornaam" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="Input.Achternaam"></label>
                <input asp-for="Input.Achternaam" class="form-control" />
                <span asp-validation-for="Input.Achternaam" class="text-danger"></span>
            </div>
            <h3 class="col-md-12">Persoonlijke gegevens</h3>
            <div class="form-group  col-md-4">
                <label asp-for="Input.Geboortedatum"></label>
                <input asp-for="Input.Geboortedatum" class="form-control" />
                <span asp-validation-for="Input.Geboortedatum" class="text-danger"></span>
            </div>
            <div class="form-group col-md-4">
                <label asp-for="Input.Geslacht"></label>
                <input asp-for="Input.Geslacht" class="form-control" />
                <span asp-validation-for="Input.Geslacht" class="text-danger"></span>
            </div>
            <div class="form-group col-md-4">
                <label asp-for="Input.Nationaliteit"></label>
                <input asp-for="Input.Nationaliteit" class="form-control" />
                <span asp-validation-for="Input.Nationaliteit" class="text-danger"></span>
            </div>

            <div class="form-group col-md-6">
                <label asp-for="Input.Straat"></label>
                <input asp-for="Input.Straat" class="form-control" />
                <span asp-validation-for="Input.Straat" class="text-danger"></span>
            </div>
            <div class="form-group col-md-3">
                <label asp-for="Input.Huisnummer"></label>
                <input asp-for="Input.Huisnummer" class="form-control" />
                <span asp-validation-for="Input.Huisnummer" class="text-danger"></span>
            </div>
            <div class="form-group col-md-3">
                <label asp-for="Input.Postcode"></label>
                <input asp-for="Input.Postcode" class="form-control" />
                <span asp-validation-for="Input.Postcode" class="text-danger"></span>
            </div>

            <div class="form-group col-md-6">
                <label asp-for="Input.Gemeente"></label>
                <input asp-for="Input.Gemeente" class="form-control" />
                <span asp-validation-for="Input.Gemeente" class="text-danger"></span>
            </div>


            <h3 class="col-md-12">Contact informatie</h3>
            <div class="form-group col-md-6">
                <label asp-for="Input.GsmNummer"></label>
                <input asp-for="Input.GsmNummer" class="form-control" />
                <span asp-validation-for="Input.GsmNummer" class="text-danger"></span>
            </div>

            <div class="form-group col-md-6">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <h3 class="col-md-12">Beveiliging</h3>
            <div class="form-group col-md-6">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-default col-md-6 center-block">Registreer</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
